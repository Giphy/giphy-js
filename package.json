{
    "name": "giphy-js",
    "scripts": {
        "lint": "eslint --ext .ts,.tsx ./packages --config ./.eslintrc --ignore-path ./.eslintignore",
        "test": "lerna exec -- npm test",
        "snapshot": "lerna run snapshot",
        "cy:run": "lerna run cy:run --",
        "cy:verify": "lerna run cy:verify",
        "cy:info": "lerna run cy:info",
        "test:watch": "lerna run test:watch --stream",
        "lerna:publish": "lerna publish from-git --yes",
        "format": "prettier-eslint \"$(pwd)/**/*.{js,ts,tsx}\" --write --print-width 120 --tab-width 4",
        "dependency-cruiser": "depcruise -c .dependency-cruiser.js ./",
        "check-licenses": "node ./scripts/license-checker.js && lerna exec -- node \\$LERNA_ROOT_PATH/scripts/license-checker.js"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "prettier-eslint --write --print-width 120 --tab-width 4",
            "eslint --rule 'import/no-duplicates: 0' --rule 'import/namespace: 0' --rule 'import/no-unresolved: 0' --rule 'import/named: 0' --rule 'import/default: 0' --rule 'import/no-named-as-default: 0' --rule 'import/no-named-as-default-member: 0'"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:Giphy/giphy-js.git"
    },
    "jest": {
        "testEnvironment": "jsdom"
    },
    "private": false,
    "devDependencies": {
        "@types/jest": "^29.5.1",
        "@types/node": "^14.14.6",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "dependency-cruiser": "^10.0.7",
        "eslint": "^7.12.1",
        "eslint-config-standard": "^16.0.1",
        "eslint-import-resolver-typescript": "^2.3.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-react": "^7.21.5",
        "eslint-plugin-react-hooks": "^4.2.0",
        "eslint-plugin-standard": "^4.0.2",
        "husky": "^4.3.0",
        "jest": "^29.5.0",
        "jest-environment-jsdom": "^29.5.0",
        "lerna": "^5.0.0",
        "lerna-changelog": "^1.0.1",
        "lint-staged": "^10.5.1",
        "prettier": "^2.1.2",
        "prettier-eslint-cli": "^5.0.0",
        "ts-jest": "^29.1.0",
        "typescript": "^4.7.3"
    },
    "changelog": {
        "labels": {
            "bug": "bug",
            "refactor": "refactor",
            "feature request": "feature",
            "build tools & CI": "build tools & continuous integration"
        }
    },
    "volta": {
        "node": "16.15.1",
        "yarn": "1.22.18"
    }
}
